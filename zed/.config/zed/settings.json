// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent_buffer_font_size": 12.0,
  "minimap": {
    "show": "always"
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "ssh_connections": [
    {
      "host": "rnd",
      "username": "utkarsh",
      "projects": [
        {
          "paths": ["~/dev/netcd"]
        }
      ]
    }
  ],
  "theme": "XY-Zed",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "buffer_font_family": "ComicShannsMono Nerd Font",
  "buffer_font_size": 14,
  "show_whitespaces": "all",
  "ui_font_family": "ComicShannsMono Nerd Font",
  "ui_font_size": 15,
  "confirm_quit": true,
  "format_on_save": "off",
  "languages": {
    "Go": {
      "format_on_save": "on"
    },
    "Rust": {
      "format_on_save": "on"
    }
  },
	"experimental.theme_overrides": {
    "renamed.background": "#FFFFFF20",
    "search.match_background": "#FFFFFF20",
    "ghost_element.background": "#00000010",
    "ghost_element.hover": "#00000099",
    "background.appearance": "blurred",
    "background": "#000000C0",
    "editor.background": "#00000000",
    "editor.gutter.background": "#00000010",
    "title_bar.background": "#000000DF",
    "toolbar.background": "#00000010",
    "terminal.background": "#00000000",
    "status_bar.background": "#000000DF",
    "tab.active_background": "#000000",
    "tab.inactive_background": "#00000000",
    "tab_bar.background": "#00000010",
    "panel.background": "#00000010",
    "border": "#00000000",
    "border.variant": "#00000000"
  }
}
